{
  "name": "ts-react-boilerplate",
  "version": "0.0.0",
  "description": "Boilerplate for React projects with TypeScript",
  "repository": {
    "type": "git",
    "url": "https://github.com/devianllert/ts-react-boilerplate.git"
  },
  "author": "Ruslan Povolockii <devianllert@gmail.com>",
  "bugs": {
    "url": "https://github.com/devianllert/ts-react-boilerplate/issues"
  },
  "license": "MIT",
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "lint": "npm run lint:eslint && npm run lint:css",
    "lint:fix": "npm run lint:eslint:fix && npm run lint:css:fix",
    "lint:eslint": "eslint --ext .tsx,.ts .",
    "lint:eslint:fix": "eslint --fix --ext .tsx,.ts .",
    "lint:css": "stylelint --fix **/*.scss",
    "lint:css:fix": "stylelint **/*.scss"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "connected-react-router": "^6.6.1",
    "dotenv": "8.2.0",
    "dotenv-expand": "^5.1.0",
    "history": "^4.10.1",
    "i18next": "^19.1.0",
    "i18next-browser-languagedetector": "^4.0.1",
    "i18next-xhr-backend": "^3.2.2",
    "query-string": "^6.10.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-essential-tools": "^0.32.0",
    "react-helmet": "^5.2.1",
    "react-i18next": "^11.3.1",
    "react-redux": "^7.1.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-transition-group": "^4.3.0",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^5.1.0",
    "@testing-library/react": "^9.4.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/classnames": "^2.2.9",
    "@types/history": "^4.7.5",
    "@types/jest": "25.1.1",
    "@types/node": "13.7.0",
    "@types/react": "16.9.19",
    "@types/react-dom": "16.9.5",
    "@types/react-helmet": "^5.0.15",
    "@types/react-redux": "^7.1.7",
    "@types/react-router": "^5.1.4",
    "@types/react-router-dom": "^5.1.3",
    "@types/react-transition-group": "^4.2.3",
    "@types/redux": "^3.6.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-react-app": "^5.2.0",
    "eslint-loader": "3.0.3",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "node-sass": "^4.13.1",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.3.1",
    "stylelint": "^13.0.0",
    "stylelint-config-recommended-scss": "^4.2.0",
    "stylelint-scss": "^3.14.2",
    "typescript": "3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.(ts|tsx)": [
      "npm run lint:eslint:fix",
      "git add"
    ],
    "*.scss": [
      "npm run lint:css:fix",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
